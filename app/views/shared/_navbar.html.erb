<header>
  <nav>
    <%= link_to "Home", root_path %>
    <%= link_to "Posts", posts_path %>
    <%= link_to "New post", new_post_path %>
  </nav>
  <% if current_user %>
    <p>
      Hello <strong><%= current_user.name %>!</strong>
      Eres administrador? <%= current_user.admin %>!</p>
    <p><%= link_to "Cerrar sesion", destroy_user_session_path, 'data-turbo-method': :delete %></p>
  <% else %>
    <p>
      No has iniciado sesion aun!!!
      <%= link_to "Registrarte!", new_user_registration_path %>
      <%= link_to "Inicia sesion!", new_user_session_path %>
    </p>
  <% end %>
</header>
